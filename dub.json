    "name": "sidero_fileformats",
    "dependencies": {
        "sidero_base": "*",
        "sidero_eventloop": "*"
    },
    "configurations": [
        {
            "name": "library",
            "targetType": "dynamicLibrary",
            "dflags-windows-ldc": [
                "--fvisibility=public",
                "-dllimport=all"
            ],
            "dflags-ldc": [
                "--linkonce-templates",
                "--link-internally"
            ],
            "buildOptions": [
                "betterC"
            ]
        },
        {
            "name": "static",
            "targetType": "staticLibrary",
            "buildOptions": [
                "betterC"
            ]
        },
        {
            "name": "unittest",
            "buildOptions": [
                "betterC"
            ]
        }
    ]
